<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent">
    xmlns:android="http://schemas.android.com/apk/res/android" />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopInfoActivity"
    android:orientation="vertical"
    android:background="@drawable/category_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="93dp"
            android:src="@drawable/logo"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scrollbars="vertical"
        android:layout_marginTop="50dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/c1"
            android:layout_width="350dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="#FFE9F9"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_baseline_shopping_cart_24"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/i1"
                    android:letterSpacing="0.03"
                    android:text="ShaktiKrupa\nPlywood and Hardware Store"
                    android:textColor="#305F72"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c2"
            android:layout_below="@id/c1"
            android:layout_width="350dp"
            android:layout_height="120dp"
            app:cardBackgroundColor="#FFF5E5"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_baseline_account_balance_24"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/i2"
                    android:letterSpacing="0.03"
                    android:text="G-5 Madhav Aracade, \nNr. Vadwala Hanuman Temple, Opp. TownHall, Kadi-382715, Gujrat, India"
                    android:textColor="#305F72"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c3"
            android:layout_below="@id/c2"
            android:layout_width="350dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#FBF5FF"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_money_24"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/i3"
                    android:letterSpacing="0.03"
                    android:text="24AYSPG6002C1ZU"
                    android:textColor="#305F72"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c4"
            android:layout_below="@id/c3"
            android:layout_width="350dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#FFF1EF"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/i4"
                    android:letterSpacing="0.03"
                    android:text="+91 (926)585-7550"
                    android:textColor="#305F72"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c5"
            android:layout_below="@id/c4"
            android:layout_width="350dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#FFF1EF"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/i5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_email_24"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/i5"
                    android:letterSpacing="0.03"
                    android:text="shaktiskrupa91733@gmail.com"
                    android:textColor="#305F72"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>
</ScrollView>